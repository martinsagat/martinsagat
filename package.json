{
    "name": "homestep",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "workspaces": [
      "packages/*",
      "packages/shared/*",
      "packages/services/*"
    ],
    "scripts": {
      "dev": "npx sst dev --mode=basic --verbose",
      "deploy": "sst deploy",
      "deploy:prod": "sst deploy --stage production",
      "remove": "sst remove",
      "start:nuxt": "cd packages/react && npm run start",
      "prepare": "husky",
      "lint-staged": "lint-staged",
      "list:secrets": "npx sst secrets list"
    },
    "devDependencies": {
      "husky": "^9.1.6",
      "lint-staged": "^15.2.10",
      "prettier": "3.3.3",
      "typescript": "5.6.2"
    },
    "dependencies": {
        "sst": "^3"
    },
    "lint-staged": {
      "./**/*.{js,jsx,ts,tsx,json}": [
        "prettier --write"
      ]
    }
  }
  